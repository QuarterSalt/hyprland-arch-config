* {
  font-family: "Fira Mono", monospace;
}

#window {
  background-color: rgba(0, 0, 0, 0.5); /* Dark Grey with 50% Transparency */
  border: 2px solid #00bb22; /* Slightly lighter grey border */
  border-radius: 0; /* Rounded corners for the main window */
  padding: 10px;
}

#inner-box {
  background-color: transparent; /* Make the inner box transparent */
  border-radius: inherit; /* Inherit the border-radius from the #window */
}

#input {
  background-color: rgba(51, 51, 51, 0.7); /* Dark grey input with slight transparency */
  color: #00bb22; /* Light grey input text */
  border: 1px solid #00bb22;
  padding: 8px;
  margin-bottom: 8px;
  border-radius: 0; /* No rounded corners for the input */
  font-size: 14pt;
}

#input:focus { border: 1px solid #00bb22; }

#scroll {
  background-color: transparent; /* Make the scroll area transparent */
  border-radius: inherit; /* Inherit the border-radius */
}

#entry {
  background-color: rgba(34, 34, 34, 0.6); /* Darker grey for entries with transparency */
  color: #ddd; /* Light grey entry text */
  padding: 8px;
  border-radius: 0; /* No rounded corners for individual entries */
}

#entry:selected {
  background-color: #00bb22; /* Neon green for selected entry background */
  color: #111; /* Dark text for selected entry */
}

#text { color: inherit; /* Inherit color from #entry */ }

#icon {
  margin-right: 5px;
  color: #ddd; /* Light grey icons */
}
